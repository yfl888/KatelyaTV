# ====================用户配置 ====================

# 管理员登录账号
USERNAME=admin
PASSWORD=12345678

# 允许用户注册（true / false）
NEXT_PUBLIC_ENABLE_REGISTER=true


# ==================== 数据库配置 ====================

# 存储类型：使用 Kvrocks
NEXT_PUBLIC_STORAGE_TYPE=kvrocks

# Kvrocks 连接配置（服务名 kvrocks，Docker 内可解析）
KVROCKS_URL=redis://kvrocks:6666

# Kvrocks 密码（如无密码，可留空）
KVROCKS_PASSWORD=

# Kvrocks 使用的数据库索引（一般为 0）
KVROCKS_DATABASE=0


# ==================== 应用配置 ====================

# JWT 加密密钥（必须是随机字符串）
NEXTAUTH_SECRET=ODFqgGOE1h9Nq5XlqRbEWHX5+v4J7QqTaa2tv43DNG5=

# 应用对外访问地址（替换为你的 IP 或域名）
NEXTAUTH_URL=http://localhost:3000

# 站点名称与描述（前端展示）
NEXT_PUBLIC_SITE_NAME=KatelyaTV
NEXT_PUBLIC_SITE_DESCRIPTION=高性能影视播放平台


# ==================== 部署配置 ====================

# 应用运行环境
NODE_ENV=production

# 应用运行端口（内部使用 3000，建议勿改）
PORT=3000

# Docker 镜像标签
DOCKER_IMAGE_TAG=latest


# ==================== 可选配置 ====================

# 豆瓣 API Key（用于影片信息，非必须）
DOUBAN_API_KEY=

# 是否启用图片代理
IMAGE_PROXY_ENABLED=true

# 缓存时间（单位：秒）
CACHE_TTL=3600


# ==================== 安全配置 ====================

# 跨域配置（如用前后端分离请设置为指定域名）
CORS_ORIGIN=*

# 请求速率限制（最大次数/窗口时长）
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000


# ==================== 监控配置 ====================

# 是否启用健康检查
HEALTH_CHECK_ENABLED=true

# 健康检查间隔（单位：秒）
HEALTH_CHECK_INTERVAL=30

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json
